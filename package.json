    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.11",
    "nanoid": "^5.1.5",
    "pg": "^8.16.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^4.5.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
